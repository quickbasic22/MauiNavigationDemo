<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDI.DetailPage"             
             xmlns:viewmodel="clr-namespace:MauiAppDI.ViewModel"
             x:DataType="viewmodel:DetailViewModel"
             Title="DetailPage">
    <StackLayout Padding="40">
        <Button 
                Text="Check Internet"
                FontAttributes="Bold"
                Command="{Binding CheckInternetCommand}"
                HorizontalOptions="Center" />

        <Button Text="Go Back"
                Command="{Binding BackCommand}"
                HorizontalOptions="Center"/>


        <Button Text="Go to Another One"
                Command="{Binding GoToAnotherCommand}"
                HorizontalOptions="Center"/>

        <Label FontSize="50"
               Text="{Binding Count}"/>

        <Label FontSize="50"
               Text="{Binding Monkey.Name}"/>

    </StackLayout>
</ContentPage>
